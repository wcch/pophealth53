<%= form_for :user, :html => {:name => 'password_reset_form'} do |f| %>
<div align="center" valign="middle">
  <table width="380" border="0" cellpadding="0" cellspacing="0">
    <tr height="25" >
      <td><B>Enter Your New Password:</B></td>
      <td></td>
    </tr>
    <tr height="25" >
      <td><%= f.password_field :password %></td>
      <td></td>
    </tr>
    <tr height="35" >
      <td><B>Confirm Your New Password:</B></td>
      <td></td>
    </tr>
    <tr height="35" >
      <td><%= password_field_tag :password_confirmation %></td>
      <td></td>
    </tr>
    <tr height="50" >
      <td colspan="2">
        <input type="submit" value="Reset password" />
      </td>
    </tr>
  </table>
</div>
<% end %>